# Database
POSTGRES_PASSWORD=mnemosyne_pass
DATABASE_URL=postgresql://mnemosyne:mnemosyne_pass@localhost:5432/mnemosyne
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=mnemosyne
DB_USERNAME=mnemosyne
DB_PASSWORD=mnemosyne_pass

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_ALGORITHM=HS256
AUTH_REQUIRED=true  # IMPORTANT: Set to true in production!

# LLM Providers (at least one required)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1  # Or compatible endpoint
OPENAI_MODEL=gpt-4o  # Or your preferred model
ANTHROPIC_API_KEY=your-anthropic-api-key
# OLLAMA_BASE_URL=http://localhost:11434  # For local models

# LLM Configuration
LLM_TEMPERATURE_MODE=variable  # "static" or "variable" (static uses env, variable uses persona)
LLM_STATIC_TEMPERATURE=0.7  # Used when mode is "static"
LLM_SYSTEM_PROMPT_MODE=separate  # "separate" or "embedded" (for models without system role)
LLM_SUPPORTS_REASONING_LEVEL=false  # Set true for models with reasoning channels
LLM_MODEL_PROFILE=standard  # Profile: standard, reasoning_channel, embedded_system, deepseek

# Token Limits
# OPENAI_MAX_TOKENS=  # Commented out = no limit on response length
LLM_MAX_TOKENS_REASONING=1000  # Limit for reasoning/decision prompts
VITE_MAX_CONTEXT_TOKENS=64000  # Context window limit (64k for most modern models)

# Embedding Settings (uses same OPENAI_BASE_URL/OPENAI_API_KEY)
MEMORY_EMBEDDING_MODEL=text-embedding-ada-002  # Your embedding model name
MEMORY_VECTOR_DIMENSIONS=1536  # Match your model's dimension

# Application Settings
APP_ENV=development  # development, staging, production
APP_NAME=Mnemosyne
APP_DEBUG=true  # Set false in production
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000"]  # Frontend origin(s)

# Frontend
VITE_API_URL=http://localhost:8000
VITE_SHADOW_URL=http://localhost:8001
VITE_COLLECTIVE_URL=http://localhost:8003

# Agent Configuration
AGENT_MAX_CONCURRENT=5
AGENT_REFLECTION_DEPTH=3

# Memory System
MEMORY_MIN_IMPORTANCE=0.3

# Signal System
SIGNAL_MIN_ENTROPY=0.7
SIGNAL_COOLDOWN_MINUTES=5

# Trust System
FRACTURE_INDEX_THRESHOLD=0.7
K_ANONYMITY_THRESHOLD=3

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
# QDRANT_API_KEY=  # Optional, for cloud deployment

# OAuth (Optional)
# OAUTH_ENABLED=false
# OAUTH_CLIENT_ID=your-oauth-client-id
# OAUTH_CLIENT_SECRET=your-oauth-client-secret
# OAUTH_AUTH_URL=https://provider.com/oauth/authorize
# OAUTH_TOKEN_URL=https://provider.com/oauth/token
# OAUTH_REDIRECT_URI=http://localhost:8000/auth/callback

# Optional: IPFS (post-MVP)
# IPFS_API_URL=http://localhost:5001

# Optional: External Services
# SENTRY_DSN=your-sentry-dsn-for-error-tracking