# Chatter Knowledge Platform Configuration
# Copy this to .env and fill in your values

# Application Settings
APP_NAME="Chatter Knowledge Platform"
LOG_LEVEL=info

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# Outline Configuration
# Get API key from Outline Settings > API Tokens
OUTLINE_API_KEY=your-outline-api-key
OUTLINE_URL=https://your-team.getoutline.com

# Database URLs (these work with docker-compose defaults)
POSTGRES_URL=postgresql://chatter:chatter@postgres:5432/knowledge
REDIS_URL=redis://redis:6379
QDRANT_URL=http://qdrant:6333

# Future Data Sources (add as needed)
# GITHUB_TOKEN=ghp_your_github_token
# CHATWOOT_API_KEY=your_chatwoot_key
# CHATWOOT_ACCOUNT_ID=your_account_id
# BOOKSTACK_TOKEN_ID=your_bookstack_token_id
# BOOKSTACK_TOKEN_SECRET=your_bookstack_token_secret
# BOOKSTACK_URL=https://your-bookstack.com