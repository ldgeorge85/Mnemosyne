# Production Environment Configuration
# Copy this to .env.prod and customize for your deployment

# Domain and SSL
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com

# Database (CHANGE THESE IN PRODUCTION!)
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123
DATABASE_URL=postgresql://postgres:CHANGE_THIS_STRONG_PASSWORD_123@postgres:5432/mnemosyne

# Redis
REDIS_URL=redis://redis:6379

# Security Keys (GENERATE NEW ONES FOR PRODUCTION!)
SECRET_KEY=GENERATE_A_STRONG_SECRET_KEY_HERE_64_CHARACTERS_MINIMUM
JWT_SECRET_KEY=GENERATE_A_JWT_SECRET_KEY_HERE_64_CHARACTERS_MINIMUM
ENCRYPTION_KEY=GENERATE_32_BYTE_ENCRYPTION_KEY_HERE

# LLM API Keys (Required)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Embedding Settings
MEMORY_EMBEDDING_MODEL=text-embedding-ada-002
MEMORY_VECTOR_DIMENSIONS=1536

# Application Settings
MODE=personal
DEBUG=false
LOG_LEVEL=INFO

# Production optimizations
WORKERS=4
MAX_CONNECTIONS=100

# Frontend URLs (will be updated by nginx)
VITE_API_URL=https://your-domain.com/api

# Optional: External Services
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# MONITORING_WEBHOOK=your-monitoring-webhook-url